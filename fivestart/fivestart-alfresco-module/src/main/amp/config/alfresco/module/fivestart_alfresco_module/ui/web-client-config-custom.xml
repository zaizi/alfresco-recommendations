<alfresco-config>

	<!-- add rateable aspect properties to property sheet -->
	<config evaluator="aspect-name" condition="mr:rateable">
		<property-sheet>
			<show-property name="mr:averageRating"
				display-label-id="average" read-only="true" />
			<show-child-association name="mr:ratings"
				display-label-id="ratings" read-only="false" />
		</property-sheet>
	</config>

	<config evaluator="string-compare" condition="Action Wizards">
		<!-- The list of aspects to show in the add/remove features action -->
		<!-- and the has-aspect condition -->
		<aspects>
			<aspect name="mr:rateable" />
		</aspects>
	</config>

</alfresco-config>